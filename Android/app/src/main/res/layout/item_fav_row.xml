<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:padding="16dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/usPhoto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@drawable/puppy"
            android:scaleType="centerCrop"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="City"
            android:fontFamily="sans-serif-condensed-light"
            android:id="@+id/usCity"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="23dp"
            android:text="Username"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:id="@+id/usName"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/lender_profile_image"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/trophy"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/numReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Reviews"
                android:fontFamily="sans-serif-condensed-light"/>

        </LinearLayout>

        <TextView
            android:id="@+id/avgRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Average Rating: "
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed-normal"
            android:layout_marginLeft="10dp"></TextView>


    </LinearLayout>
</androidx.cardview.widget.CardView>